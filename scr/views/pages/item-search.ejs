<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
    <%- include('../partials/header'); %>
</header>

<main>
    <div class="card">
        <form class="form-inline">
            <p>Pesquisar clicks entre intervalos de datas</p>
            <label class="sr-only">Início:</label><input class="form-control" id="date" type="date">
            <label class="sr-only">Término:</label><input class="form-control" id="date" type="date">
        </form>
    </div>
    <table class="table">
        <tr>
            <th scope="col">id</th>  
            <th scope="col">title</th>
            <th scope="col">vendedor</th> 
            <th scope="col">price</th>
            <th scope="col">vendas</th>
            <th scope="col">clicks</th>
            <th scope="col">Conversão</th>
            <th scope="col">Receita</th>         
        </tr>
        <% for(var item in datasearch.results){%>
            <tr>
                <td>
                    <%= datasearch.results[item].id%>
                </td>
                <td>
                    <a href="<%= datasearch.results[item].permalink%>"><%= datasearch.results[item].title%></a>
                </td>
                <td>
                    <a href="<%= datasearch.results[item].seller.permalink%>"><%= datasearch.results[item].seller.id%></a>
                </td>
                <td>
                    <% price = datasearch.results[item].price %> <%= datasearch.results[item].price %>
                </td>
                <td>
                    <% sold = datasearch.results[item].sold_quantity %> <%= datasearch.results[item].sold_quantity %>
                </td>
                <td>
                    <% clicks = Object.values(datavisits[item]) %> <%= Object.values(datavisits[item]) %>
                </td>
                <td>
                    <% conversao = sold / clicks %> <%= conversao.toFixed(3) %>
                </td>
                <td>
                    <% receita = price * clicks %> <%= receita.toFixed() %>
                </td>
            </tr>
            <% } %>
        </table>
</main>

<footer>
    <%- include('../partials/footer'); %>
</footer>

</body>
</html>