<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
    <%- include('../partials/header'); %>
</header>

<main>
    <table class="table">
    <tr>
        <th scope="col">id</th>
        <th scope="col">name</th>
        <th scope="col">Volume de itens</th>
    </tr>
    <% for(var item in datacategorie.children_categories){%>
        <tr>
            <td>
                <%= datacategorie.children_categories[item].id%>
            </td>
            <td>
                <%= datacategorie.children_categories[item].name%>
            </td>
            <td>
                <%= datacategorie.children_categories[item].total_items_in_this_category%>
            </td>
            <td><a href="/trends/<%= datacategorie.children_categories[item].id%>">Tendencias</a>&nbsp;&nbsp;&nbsp;</td>
            <td><a href="/api/<%= datacategorie.children_categories[item].id%>/items">Items</a>&nbsp;&nbsp;&nbsp;</td>
            <td><a href="/highlights/<%= datacategorie.children_categories[item].id%>">Mais Vendidos</a>&nbsp;&nbsp;&nbsp;</td>
            <td>
                <% if (datamais.content[item].type == 'ITEM') { %>
                    <a href="highlights/item/<%= datamais.content[item].id%>">posição</a>"
                <% } else { %>
                    <a href="highlights/product/<%= datamais.content[item].id%>">posição</a>"
                <% } %>
            </td>
        </tr>
        <% } %>
    </table>
</main>

<footer>
    <%- include('../partials/footer'); %>
</footer>

</body>
</html>